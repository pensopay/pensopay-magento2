<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job instance="PensoPay\Gateway\Cron\UpdatePayments" method="execute" name="pensopay_payments_update">
            <schedule>*/10 * * * *</schedule>
        </job>
        <job instance="PensoPay\Gateway\Cron\CancelOldOrders" method="execute" name="pensopay_old_order_cancel">
            <schedule>* * * * *</schedule>
        </job>
    </group>
</config>